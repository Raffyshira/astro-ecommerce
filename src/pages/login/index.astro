---
import BaseLayout from "@/layouts/Layout.astro";
import Container from "@/components/main-components/Container.astro";

---

<BaseLayout>
  <Container>
    <button id="login">Login</button>

    <script>
      const { signIn } = await import("auth-astro/client");
    
      const loginButton = document.querySelector<HTMLButtonElement>("#login"); // Ubah sesuai tipe elemen yang tepat
    
      if (loginButton) { // Pengecekan null
        loginButton.onclick = () => signIn("github", { callbackUrl: "/" });
      }
    </script>

  </Container>
</BaseLayout>
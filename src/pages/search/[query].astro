---
import Layout from '@/layouts/Layout.astro';
import Container from "@/components/main-components/Container.astro";
import SearchResults from '@/features/search/SearchResults.tsx';
import BottomNav from "@/components/navbar/bottom-nav.tsx"

const { query } = Astro.params;
---
<Layout>
  <Container class="mt-14">
    <h1 class="mb-5 text-base font-SatoshiBold">Search Result For : {query}</h1>
    <SearchResults query={query} client:idle />
    <div class="mt-5 pb-10">
        <a href="/" role="button" class="btn btn-neutral  w-full ">Back To Home</a>
    </div>
  </Container>
  <BottomNav client:load />
</Layout>
